<div class="comment">
	<div class="comment_content">
		<p><%= comment.name %></p>
		<p><%= comment.body %></p>
		<p><%= time_ago_in_words(comment.created_at) %> ago</p>
	</div>

	<p><%= link_to 'Delete', [comment.post, comment],
								method: :delete,
								class: 'button',
								data: { confirm: 'Are you sure you want to delete that comment?' } %></p>
</div>